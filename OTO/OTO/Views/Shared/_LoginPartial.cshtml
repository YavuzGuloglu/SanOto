
@{
    Layout = null;
}



@if (Session["KullaniciAdi"] != null)
{
    @Html.AntiForgeryToken()

    if (User.IsInRole("True"))
    {
        <li><a href="@Url.Action("Ilanlar","Home")"><i class="fa fa-clone"></i>İlanlar</a></li>
        <li><a href="@Url.Action("UstaList","HomeLogin")"><i class="fa fa-clone"></i>Usta Ekle</a> </li>
    }
    if (User.IsInRole("False"))
    {
        <li><a href="@Url.Action("Ustalar","Home")"><i class="fa fa-clone"></i>Ustalar</a></li>
        <li><a href="@Url.Action("IlanList","HomeLogin")"><i class="fa fa-plus-circle"></i>İlan Ekle</a></li>
    }


    <li><a href="@Url.Action("Iletisim","Home")"><i class="fa fa-phone"></i>İletişim</a></li>
    <li><a href="@Url.Action("Logout","Account")"><i class="fa fa-sign-out"></i>Çıkış Yap</a></li>


}
else
{
    <li><a href="@Url.Action("Ustalar","Home")"><i class="fa fa-clone"></i>Ustalar</a></li>
    <li><a href="@Url.Action("Ilanlar","Home")"><i class="fa fa-clone"></i>İlanlar</a></li>
    <li><a href="@Url.Action("Iletisim","Home")"><i class="fa fa-phone"></i>İletişim</a></li>
    <li><a href="@Url.Action("Login","Account")"><i class="fa fa-address-book"></i>Giriş Yap</a> </li>

}
