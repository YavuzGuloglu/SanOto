@model OTO.Models.Entity.Ilan

@{
    ViewBag.Title = "IlanGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- PageBanner -->
<div class="container-fluid no-padding pagebanner alert alert-info" style="background:#05C46B">
    <div class="container">
        <br />
        <h2 style="color:whitesmoke">İlan Güncelleme</h2>
        <hr />
    </div>
</div>
<!-- PageBanner /- -->




<div class="col-md-10  offset-md-1 ">
    <br />
    <div class="col-md-6 offset-md-3">
        <div class="container">

            @using (Html.BeginForm("IlanGuncel","HomeLogin",FormMethod.Post, new {enctype= "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.ilan_id)
                    <div class="form-group">
                        <label style="color:green; font-size:large">Güncellenen İlan ID'si  &nbsp;:</label> &nbsp;&nbsp;
                        @Html.TextBoxFor(model => model.ilan_id, new { @class = "form-control-sm", @disabled = "true" })
                        <hr />
                    </div>

                    <div class="form-group">
                        <label><u><h5>İlan Başlık</h5></u></label>

                        @Html.EditorFor(model => model.ilan_baslik, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ilan_baslik, "", new { @class = "text-danger" })
                    </div>


                    <br />


                    <div class="row">
                        <div class="col-md-4 col-sm-12">

                            <label><u><h5>Ad </h5></u></label>

                            @Html.EditorFor(model => model.ilan_verenAd, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ilan_verenAd, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-md-4 col-sm-6">
                            <div class="form-group">
                                <label><u><h5>Soyad</h5></u></label>

                                @Html.EditorFor(model => model.ilan_verenSoyad, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ilan_verenSoyad, "", new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6">

                            <label><u><h5>İlan Telefon</h5></u></label>
                            @Html.EditorFor(model => model.ilan_verenTel, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ilan_verenTel, "", new { @class = "text-danger" })
                        </div>

                    </div>

                    <br />

                    <div class="justify-content-start">
                        <div class="row">

                            <div class="col-md-4 col-sm-12">

                                <label><u><h5>İlan Kategori</h5></u></label>    <br />
                                @try
                                {
                                    @Html.DropDownList("ilan_kategori", (List<SelectListItem>)ViewBag.deger, null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.ilan_kategori, "", new { @class = "text-danger" })
                                }
                                catch (Exception)
                                {

                                    Response.Write("Boş Bırakılamaz");
                                }


                            </div>
                            <div class="col-md-4 col-sm-6">

                                <label><u><h5>İlan Şehir</h5></u></label>
                                @Html.EditorFor(model => model.ilan_sehir, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ilan_sehir, "", new { @class = "text-danger" })

                            </div>
                            <div class="col-md-4 col-sm-6">

                                <label><u><h5>İlan İlçe</h5></u></label>
                                @Html.EditorFor(model => model.ilan_ilce, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ilan_ilce, "", new { @class = "text-danger" })

                            </div>
                        </div>

                    </div>
                    <br />
                    <div class="form-group">
                        <label> <u><h5>İlan Adres</h5></u> </label>

                        @Html.EditorFor(model => model.ilan_adres, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ilan_adres, "", new { @class = "text-danger" })

                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-6 col-sm-12">
                            <label><u><h5>İlan Tarih</h5></u></label>
                            @Html.EditorFor(model => model.ilan_tarih, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ilan_tarih, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label><u><h5>İlan Fiyat</h5></u></label>
                            @Html.EditorFor(model => model.ilan_fiyat, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ilan_fiyat, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <label><u><h5>İlan Eposta</h5></u></label>

                        @Html.EditorFor(model => model.ilan_verenEposta, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ilan_verenEposta, "", new { @class = "text-danger" })

                    </div>
                    <br />

                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-5 col-sm-12">
                                <label><h5><u>İlan Resim</u></h5></label>
                                <br />
                                <input type="file" name="guncellenecekResimIlan" id="guncellenecekResimIlan" enctype="multipart/form-data" />
                                @Html.ValidationMessageFor(model => model.ilan_foto, "", new { @class = "text-danger" })

                            </div>
                            <div class="col-md-7 col-sm-12">
                                <br />
                                @if (Model.ilan_foto != null)
                                {
                                    <input class="text-body form-control bg-success" style="color:white" disabled="true" value=" İlana Ait Resim Bulunmaktadır." />
                                }
                                else
                                {<input class="text-body form-control bg-danger" style="color:white" disabled="true" value=" İlana Ait Resim Bulunmamaktadır !" />}

                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="form-group">
                        <label><u><h5>Ürün Detay</h5></u></label><br />
                        @Html.TextAreaFor(Model => Model.ilan_detay, new { @class = "form-control", rows = "9 " })
                    </div>
                    <br />
                    <div class="container col-sm-4">
                        <input type="submit" class="form-control btn bg-success" style="font-size:medium" value="G ü n c e l l e" name="IlanButonEkle" />


                    </div>
                </div>
            }

        </div>
    </div>
</div>