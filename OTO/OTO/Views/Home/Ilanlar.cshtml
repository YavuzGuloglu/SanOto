@model List<OTO.Models.Entity.Ilan>

@{
    ViewBag.Title = "Ilanlar";
    Layout = "~/Views/Shared/_Layout.cshtml ";
}

<!-- Events -->
<section class="events archive section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-12">
                <div class="section-title bg">
                    <h2>Kayıtlı <span>İlanlar</span></h2>
                    <p>Verilmiş ilanların listelendiği sayfadısınız hadi ilanlara göz atalım belki çözümü siz buluruz.</p>
                    <div class="icon"><i class="fa fa-paper-plane"></i></div>
                </div>
            </div>
        </div>



        <div class="row">
            @foreach (var ilan in Model.ToList())
            {
                <div class="col-lg-4 col-md-6 col-12">
                    <!-- Single Event -->
                    <div class="single-event" style="width: 350px; height: 500px;">
                        <div class="event-image">
                            <a href="/Home/IlanDetay/@ilan.ilan_id">
                                <img src="~/Content/img/ilan/@ilan.ilan_foto" style="width: 337px; height: 190px;" alt="#">
                            </a>
                            <div class="event-date">
                                <p><span>@ilan.ilan_sehir</span></p>
                            </div>
                        </div>
                        <hr />
                        <div class="event-content">
                            <h3 class="event-title"><a href="/Home/IlanDetay/@ilan.ilan_id">@ilan.ilan_baslik</a></h3>
                            <p>@ilan.ilan_detay</p>
                            <span class="entry-date-time"><i class="fa fa-clock-o" aria-hidden="true"></i> @ilan.ilan_tarih</span>
                        </div>
                    </div>
                    <!-- End Single Event -->
                </div>

            }


        </div>
    </div>
</section>
<!--/ End Events -->